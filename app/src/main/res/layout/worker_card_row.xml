<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="8dp"
app:layout_column="0"
app:layout_row="1"
app:layout_columnSpan="6"
android:paddingTop="4dp"
android:weightSum="6"
app:columnCount="6">

<LinearLayout
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:background="@color/placeholderColor">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imgWorkerImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:baselineAlignBottom="false"
        android:src="@drawable/user"
        app:civ_border_color="@color/cardBackgroundColor"
        app:civ_border_width="2dp"
        app:layout_gravity="center" />

</LinearLayout>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/workerCardBackground">


    <TextView
        android:id="@+id/lblUserName"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_weight="1"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblWorkerWorkTypes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" />
</LinearLayout>

</android.support.v7.widget.GridLayout>
