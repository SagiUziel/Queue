<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cardBackgroundColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#4f5b74</item>
    </style>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cardBackgroundColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#4f5b74</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/smallColor2</item>
        <item name="colorControlNormal">@color/smallColor2</item>
        <item name="android:textColor">@color/smallColor</item>
        <item name="android:windowBackground">@color/cardBackgroundColor</item>
        <item name="android:textColorAlertDialogListItem">@color/MainTextColor</item>
    </style>

    <style name="MyAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
